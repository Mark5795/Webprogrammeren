@model Whatsup.Models.AddGroupViewModel

@{
    ViewBag.Title = "EditChat";
}

<h2>Edit Chatname</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <section class="form-horizontal">
        <hr />

        <h4>Fill in the group name</h4>

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <section class="form-group">
            @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-md-2", autofocus = "" })
            <section class="col-md-10">
                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
            </section>
        </section>

        <hr />
        <section class="form-group">
            <section class="col-md-10">
                <input type="submit" value="Create" class="btn btn-primary btn-lg" />
            </section>
        </section>
    </section>

    <section class="back-link">
        @Html.ActionLink("Back to New Chat", "ChatContact", "chat")
    </section>
}