@model IEnumerable<Whatsup.Models.ContactViewModel>

@{
    ViewBag.Title = "ChatContact";
}

<section class="top-button">
    @Html.ActionLink("New GroupChat", "AddGroupChat", "Chat", null, new { @class = "btn btn-primary btn-lg" })
    @Html.ActionLink("Add Contact", "AddContact", "Contact", null, new { @class = "btn btn-primary btn-lg" })
</section>

<h2>Contacts to chat</h2>

<hr />

<section id="Contact">
    @if (Model.Count() == 0)
    {
        <p>You have no contacts, go to "Add Contact" to add contacts!</p>
    }
    else
    {
        foreach (var item in Model)
        {
            @Html.ActionLink(item.NickName, "AddChat", new { contactIndex = item.Index }, new { @class = "ContactListButton" })
        }
    }

</section>

<section class="back-link">
    @Html.ActionLink("Back to Home", "Index", "Home")
</section>

