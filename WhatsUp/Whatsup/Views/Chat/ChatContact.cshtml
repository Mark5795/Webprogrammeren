@model IEnumerable<Whatsup.Models.ContactViewModel>

@{
    ViewBag.Title = "ChatContact";
}

<div class="btn btn-default">
    @Html.ActionLink("New GroupChat", "AddGroupChat", "Chat")
</div>
<p></p>
<div class="btn btn-default">
    @Html.ActionLink("Add Contact", "AddContact", "Contact")
</div>
<hr />

<h2>Contacts to chat</h2>

<section id="Contact">
    @if (Model.Count() == 0)
    {
        <p>You have no contacts, go to "Add Contact" to add contacts!</p>
    }
    else
    {
        foreach (var item in Model)
        {
            <div class="btn btn-default">
                @Html.ActionLink(item.NickName, "AddChat", new { contactIndex = item.Index })
            </div>
            <p></p>
        }
    }


</section>

<section class="back-link">
    @Html.ActionLink("Back to Home", "Index", "Home")
</section>

