@model Whatsup.Models.ChatViewModel

@{
    ViewBag.Title = "Chat";
}

<h2>@ViewBag.Nickname</h2>

<section id="content-chat">

    <p>@Html.DisplayFor(Model => Model.Content) </p>

    @using (Html.BeginForm())
    {
        @Html.TextAreaFor(Model => Model.Content, new { name = "question", @class = "text-area", @placeholder = "Send a message" })

        <input type="submit" value="Send" class="btn btn-default" />
    }

</section>

<div>
    @Html.ActionLink("Back to Home", "Index", "Home")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}



