@model IEnumerable<Whatsup.Models.ContactViewModel>

@{
    ViewBag.Title = "Contacts";
}

<section class="top-button">
    @Html.ActionLink("Add Contact", "AddContact", "Contact", null, new { @class = "btn btn-primary btn-lg" })
</section>

<h2>Contacts</h2>

<hr />

<section id="Contact">
    @foreach (var item in Model)
    {
        @Html.ActionLink(item.NickName, "ContactProfile", new { index = item.Index }, new { @class = "ContactListButton" })
    }
    @if (Model.Count() == 0)
    {
        <p class="text-danger">You have no contacts, go to Add Contact.</p>
    }

</section>

<section class="back-link">
    @Html.ActionLink("Back to Chats", "Index", "Home")
</section>

