@model Whatsup.Models.ContactViewModel

@{
    ViewBag.Title = "Profile Contact";
}

<section class="top-button">
    @Html.ActionLink("Delete Contact", "DeleteContact", new { index = Model.Index }, new { @class = "btn btn-primary btn-lg" })
    @Html.ActionLink("Edit Contact", "EditContact", new { index = Model.Index }, new { @class = "btn btn-primary btn-lg" })
</section>

<h2>@Html.DisplayFor(model => model.NickName)</h2>

<hr />

<section class="form-group">
    <section class="col-md-offset-1 col-md-10" ">
        <p><b>Name:</b> @Model.NickName</p>
        <p><b>Email:</b> @Model.Email</p>
    </section>
</section>

<section class="back-link">
    @Html.ActionLink("Back to Contact", "Contact", "Contact")
</section>
