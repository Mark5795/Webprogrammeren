@model Whatsup.Models.ContactViewModel

@{
    ViewBag.Title = "DeleteContact";
}

<h2>Are you sure you want to delete this Contact?</h2>

<section id="DeleteContact">
    <p>@ViewBag.Email</p>

</section>
@using (Html.BeginForm())
{
    <input type="submit" value="Yes" class="btn btn-default" />
}


<section class="btn btn-default">
    @Html.ActionLink("No", "ContactProfile", new { index = Model.Index })
</section>

<section class="back-link">
    @Html.ActionLink("Back to Contact", "Contact", "Contact")
</section>

